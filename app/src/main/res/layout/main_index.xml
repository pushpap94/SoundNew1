<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/indexbg"
    android:gravity="center_horizontal"
    tools:context="com.soundnew.MainActivity"
    tools:ignore="ContentDescription" >

<!--    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android" -->
<!--     android:id="@+id/pager" -->
<!--     android:layout_width="wrap_content" -->
<!--     android:layout_height="wrap_content"> -->
<!--    </android.support.v4.view.ViewPager> -->

    <ImageView
        android:id="@+id/birdsindex"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/toucanindx" />

    <ImageView
        android:id="@+id/pindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/petsindex"
        android:layout_toLeftOf="@+id/bindex"
        android:layout_below="@+id/petsindex" />

    <ImageView
        android:id="@+id/petsindex"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/dogindx"
        android:layout_alignTop="@+id/birdsindex"
        android:layout_toLeftOf="@+id/bindex" />

    <ImageView
        android:id="@+id/animalindex"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/elephantindx"
        android:layout_alignTop="@+id/birdsindex"
        android:layout_toRightOf="@+id/bindex" />

    <ImageView
        android:id="@+id/aindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/animindex"
        android:layout_below="@+id/petsindex"
        android:layout_toRightOf="@+id/bindex" />

    <ImageView
        android:id="@+id/bindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/birdsindex"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
